[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100

ij_continuation_indent_size = 2
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true
ij_wrap_on_typing = false
ij_php_force_short_declaration_array_style = true
ij_php_comma_after_last_array_element = true
ij_php_keep_rparen_and_lbrace_on_one_line = true

ij_javascript_align_multiline_parameters = false
ij_javascript_enforce_trailing_comma = whenmultiline
ij_javascript_force_semicolon_style = true
ij_javascript_import_sort_members = true
ij_javascript_import_sort_module_name = true
ij_javascript_import_prefer_absolute_path = false
ij_javascript_imports_wrap = off
ij_javascript_object_literal_wrap = off

ij_typescript_align_multiline_parameters = false
ij_typescript_enforce_trailing_comma = whenmultiline
ij_typescript_force_semicolon_style = true
ij_typescript_import_sort_members = true
ij_typescript_import_sort_module_name = true
ij_typescript_import_prefer_absolute_path = false
ij_typescript_imports_wrap = off
ij_typescript_object_literal_wrap = off

ij_any_blank_lines_after_imports = 1
ij_any_keep_blank_lines_in_code = 1
